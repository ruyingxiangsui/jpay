<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_bar"
        android:gravity="center"
        android:text="@string/infocenter"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/info_center_item"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:background="@drawable/ic_launcher"
            android:contentDescription="@string/picturedes" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:gravity="center"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/info_center_item"
        android:clickable="true"
        android:drawableStart="@drawable/settings"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="@string/title_activity_setting_password"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/all_trans"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/info_center_item"
        android:clickable="true"
        android:drawableStart="@drawable/trans"
        android:padding="7dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/all_trans_record"
        android:textSize="17sp" />
<TextView
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/info_center_item"
        android:clickable="true"
        android:drawableStart="@drawable/trans"
        android:padding="7dp"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:text="@string/balance"
        android:textSize="17sp" />
    
    <TextView
        android:id="@+id/bt_exit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/info_center_item"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/exit"
        android:textColor="#FF0000"
        android:textSize="20sp" />

</LinearLayout>